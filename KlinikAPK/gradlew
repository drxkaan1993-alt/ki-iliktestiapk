#!/usr/bin/env sh

# Gradle wrapper script
# Generated by the Gradle team for building Android projects.

set -e

# Default to the Gradle wrapper Jar location
GRADLE_WRAPPER_JAR=gradle/wrapper/gradle-wrapper.jar

# Directory containing this script
DIR="$(cd ""+"$(dirname "$0")"; pwd)"

# Point to the directory where the wrapper jar is located
if [ ! -f "$DIR/$GRADLE_WRAPPER_JAR" ]; then
  echo "Gradle wrapper jar ($DIR/$GRADLE_WRAPPER_JAR) not found. Please ensure this script is run from a Gradle project."
  exit 1
fi

# Execute the Gradle wrapper
exec java -jar "$DIR/$GRADLE_WRAPPER_JAR" "$@"